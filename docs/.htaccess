# Set the default directory index file
DirectoryIndex html/index.html

# Ensure requests for the root directory are served from html/index.html
RewriteEngine On
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^ html/index.html [L]

# Redirect HTTPS requests to HTTP
RewriteCond %{HTTPS} on
RewriteRule (.*) http://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
